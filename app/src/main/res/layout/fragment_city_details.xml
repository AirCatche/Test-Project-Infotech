<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo">

        <ProgressBar
            android:id="@+id/pbCityDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvCityDetailsHumidityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/city_details_humidity_label"
            android:textAppearance="@style/TextAppearance.20.White"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsMinTempLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsMinTempLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsMinTemp" />

        <TextView
            android:id="@+id/tvCityDetailsHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.20.Blue"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsHumidityLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsHumidityLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsHumidityLabel"
            tools:text="25%" />

        <TextView
            android:id="@+id/tvCityDetailsWindSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="@string/city_details_wind_label"
            android:textAppearance="@style/TextAppearance.20.White"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsMaxTempLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsMaxTempLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsMaxTemp" />

        <TextView
            android:id="@+id/tvCityDetailsWindSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.20.Blue"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsWindSpeedLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsWindSpeedLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsWindSpeedLabel"
            tools:text="25째" />

        <TextView
            android:id="@+id/tvCityDetailsMinTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/city_details_min_temp_label"
            android:textAppearance="@style/TextAppearance.20.White"
            app:layout_constraintEnd_toStartOf="@+id/tvCityDetailsMaxTempLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsCurrentTemp" />

        <TextView
            android:id="@+id/tvCityDetailsMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.20.Blue"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsMinTempLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsMinTempLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsMinTempLabel"
            tools:text="25째" />

        <TextView
            android:id="@+id/tvCityDetailsMaxTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/city_details_max_temp_label"
            android:textAppearance="@style/TextAppearance.20.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCityDetailsMinTempLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsCurrentTemp" />

        <TextView
            android:id="@+id/tvCityDetailsMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.20.Blue"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsMaxTempLabel"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsMaxTempLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsMaxTempLabel"
            tools:text="25째" />

        <TextView
            android:id="@+id/tvCityDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.40.White"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mapCityDetails"
            tools:text=" Toronto " />

        <TextView
            android:id="@+id/tvCityDetailsDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.24.White"
            app:layout_constraintEnd_toEndOf="@+id/tvCityDetailsName"
            app:layout_constraintStart_toStartOf="@+id/tvCityDetailsName"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsName"
            tools:text=" Clear Sky " />

        <TextView
            android:id="@+id/tvCityDetailsCurrentTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.100.Blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCityDetailsDescription"
            tools:text="25째" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gCityDetailsWeatherInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tvCityDetailsHumidityLabel, tvCityDetailsHumidity, tvCityDetailsWindSpeedLabel, tvCityDetailsWindSpeed, tvCityDetailsMinTempLabel, tvCityDetailsMinTemp, tvCityDetailsMaxTempLabel, tvCityDetailsMaxTemp, tvCityDetailsDescription, tvCityDetailsCurrentTemp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            layout="@layout/fragment_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>